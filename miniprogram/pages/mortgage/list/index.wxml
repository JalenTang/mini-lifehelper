<view class="container">
  <view class="header">
    <text>期数</text>
    <text>月供</text>
    <text>月供本金</text>
    <text>月供利息</text>
  </view>
  <scroll-view scroll-y class="list">
    <view wx:for="{{list}}" wx:key="index">
      <!-- <text class="year">第1年</text> -->
      <view class="">
        <text>{{index + 1}}期</text>
        <text>{{item.monthlyRepayment}}</text>
        <text>{{item.monthlyPrincipal}}</text>
        <text>{{item.monthlyInterest}}</text>
      </view>
    </view>
  </scroll-view>
</view>