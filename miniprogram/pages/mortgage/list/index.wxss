.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.header text {
  line-height: 90rpx;
  font-weight: 600;
  text-align: center;
  border: 1px solid #000;
}

.header text:nth-of-type(1) {
  text-align: left;
  padding-left: 16rpx;
  width: 20%;
}
.header text:nth-of-type(2) {
  width: 20%;
}
.header text:nth-of-type(3) {
  width: 30%;
}
.header text:nth-of-type(4) {
  width: 30%;
}

.list {
  height: 1000px;
  padding-top: 90rpx;
  background-color: chartreuse;
}