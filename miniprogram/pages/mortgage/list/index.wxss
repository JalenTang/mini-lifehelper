.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.header text {
  line-height: 90rpx;
  font-weight: 600;
  text-align: center;
}

.header text:nth-of-type(1) {
  text-align: left;
  padding-left: 20rpx;
  width: 20%;
}
.header text:nth-of-type(2) {
  width: 20%;
}
.header text:nth-of-type(3) {
  width: 30%;
}
.header text:nth-of-type(4) {
  width: 30%;
}

.list {
  width: 100%;
  height: 100vh;
  padding-top: 90rpx;
  overflow: hidden;
}

.list-item-title {
  line-height: 90rpx;
  margin-left: 20rpx;
}

.list-item {
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}

.list-item text {
  line-height: 90rpx;
  text-align: center;
}

.list-item text:nth-of-type(1) {
  text-align: left;
  padding-left: 20rpx;
  font-weight: 600;
  width: 20%;
}
.list-item text:nth-of-type(2) {
  width: 20%;
}
.list-item text:nth-of-type(3) {
  width: 30%;
}
.list-item text:nth-of-type(4) {
  width: 30%;
}
